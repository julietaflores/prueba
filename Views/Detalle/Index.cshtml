    var idu = @Session["UserId"];
    var ws = $("#webserv").val();
    var ruta_actual = $("#ruta_actual").val();
    var ruta_actual1 = $("#ruta_actual1").val();
    var labels = new Array();
    var data = new Array();
</script>

